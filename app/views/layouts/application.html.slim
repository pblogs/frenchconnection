doctype html
html
  head
    title Alliero
    = stylesheet_link_tag "application", media: "all",  
      "data-turbolinks-track" => true
    script src="//js.pusher.com/2.2/pusher.min.js" type="text/javascript"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    meta content="width=device-width, initial-scale=1" name="viewport" 
  body(id=body_id ng-app="orwapp")
    #outer-container
      #main
        .logo-wrapper
          h1= link_to (image_tag 'Alliero-header.gif'), root_path
        - if signed_in?
          nav
            ul#top_nav
              - if @current_user.has_role? :project_leader
                li= link_to t('top_nav.projects'), projects_path
                li= link_to t('top_nav.customers'), customers_path
                li= link_to t('top_nav.manage'), users_path
              li= link_to t('top_nav.my_page'), @current_user
              li= link_to t('top_nav.hse'), hms_path
              li= link_to t('top_nav.dictionary'), dictionary_url
            .breadcrumb = yield :breadcrumb

        section
          p#notice = notice
          p#alert  = alert
          = yield
          br
          br
          br
          br
          br

    footer#footer
      .content
        .filler
        .address
          br
          h6 KONTAKT OSS
          br

          p
            |Bes√∏ksadresse
            br
            |Alliero As
            br
            |Nydalsveien 30 B
            br
            |0484 Oslo
          
          p
            |Postadresse
            br
            |Alliero As
            br
            |Pb 4681 Nydalen
            br
            |0405 Oslo
          
          p
            |Phone: 23 26 54 00
            br
            |Fax: 23 26 54 01
            br
            |Mail: post@alliero.no

      .banner
        .login_logout
          br
          - if signed_in?
            span 
              ="Logget inn som #{@current_user.name}"
              br
              - @current_user.roles.each do |r| 
                em= t(r) 
            br
            = link_to 'Logg ut', destroy_user_session_path, method: :delete

