== form_for [@customer, @project] do |f|
  - if @project.errors.any?
    #error_explanation
      h2 = "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      ul
        - @project.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :project_number, 'Prosjektnummer'
    = f.text_field :project_number, 
      placeholder: 'Prosjektnummer kan fylles ut senere'
  .field
    = f.label :name, 'Navn'
    = f.text_field :name, placeholder: 'Navn p√• prosjektet'

  .field
    = f.label :start_date, 'Oppstartsdato'
    = f.text_field :start_date, class: :datepicker, placeholder: 'Velg dato'

  .field
    = f.label :due_date, 'Dato for ferdigstillelse av oppdrag'
    = f.text_field :due_date, class: :datepicker,  placeholder: 'Velg dato'

  hr

  .field.radio_group
    = f.label :fixed_price, 'Timesbetaling'
    = radio_button_tag 'payment', 'project_paid_by_the_hour', @project.paid_by_the_hour

    br
    = f.label :fixed_price, 'Fastpris'
    = radio_button_tag 'payment', 'fixed_price', @project.fixed_price

  .field.hour_rate(class="#{ @project.paid_by_the_hour ? 'visible' : 'hide'}" )
    /- raise  "#{@project.hour_rate ? 'visible' : 'hide'}"
    br
    = f.label :hour_rate, 'Pris pr time'
    = f.text_field :hour_rate, placeholder: 'Timespris for prosjektet'

  .field.price_total(class="#{ @project.fixed_price ? 'visible' : 'hide'}" )
    br
    = f.label :price_total, 'Fastpris for prosjektet'
    = f.text_field :price_total
  hr

  .field
    /= f.file_field :due_date, class: :datepicker,  placeholder: 'Velg bilde'
    .button.green
      strong= "#{fa_icon('camera')} Ta bilde ".html_safe
    br
    br


  .actions = f.submit 'Lagre oppdrag i Visma'
