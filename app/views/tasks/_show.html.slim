    th= "#{t('start_date')} / #{t('due_date')}"
  tbody
    tr
      td = link_to task.project.customer.name, task.project.customer
      td = task.name_of_users
      td = task.description
      td 
        = I18n.l(task.start_date, format: :short_w_year)
