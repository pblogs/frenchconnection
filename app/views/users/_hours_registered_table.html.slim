- if hours

  table#hours_registered
    tr
      th Tekst
      th Dato
      th Timer
      th 50%
      th 100%
      th Servicebil
      th Km egen bil
      th Bomutg.
      th Materiell
      th Status
      th 
    - hours.each do |hour|
      tr
        td= hour.description
        td= hour.date.strftime("%d")
        td= hour.hour
        td= hour.overtime_50
        td= hour.overtime_100
        td= hour.runs_in_company_car
        td= hour.km_driven_own_car
        td= hour.toll_expenses_own_car
        td= simple_format hour.supplies_from_warehouse
        td
          span(class="#{'badge-success' if hour.approved?}")
            = t(hour.approved? ? 'jupp' : 'nope')
          - if hour.billable?
            .tooltip-item
              =  'Redigert'
              .tooltip 
                p= hour.change_reason
        td= link_to fa_icon('pencil-square-o'),
              edit_task_hours_spent_path(hour.task, hour), id: 'edit_hour'

  = button_to 'Godkjenn timene', user_approve_hours_path(@user, @project),
    class: 'btn btn-primary'
- else
  br
  br
  p Det er ikke registert noen timer pÃ¥ dette prosjektet.
  br
  br
/= link_to 'Vis alle', hours_path({:show_all => 1}), class: 'pull-right'

