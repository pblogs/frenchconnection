div ng-controller="ToolsController" data-task-id="#{@task.id}"
  h1 Search for the tools required to get the job done
  
  | Search:
  input ng-model="searchText" placeholder='machines, lifts, tools ..' /
  br
  br
  br
  table#searchTextResults ng-show="searchText"
    tr
      th What
      th Price pr day
      th Options
    tr ng-repeat=("tool in tools | filter:searchText") 
      td 
        | {{tool.name}}
      td 
        | {{tool.rental_price_pr_day}}
      td 
        button(ng-click="select(tool)") Select


  br
  br
  br
  div(ng-show="selected_tools")
    h5 Selected tools
    table#selectedTools
      tr
        th What
        th Price pr day
        th Options
      tr ng-repeat=("tool in selected_tools") 
        td 
          | {{tool.name}}
        td 
          | {{tool.rental_price_pr_day}}
        td 
          button(ng-click="select(tool)") Remove
          span not implemented


br
br
br
= link_to 'Find someone to execute the job', project_task_workers_path(@task.project, @task),
  class: 'btn btn-primary pull-right'
