div ng-controller="ToolsController" data-task-id="#{@task.id}"
  h1 tools
  
  | Search:
  input ng-model="searchText" /
  table#searchTextResults ng-show="searchText"
    tr
      th What
      th Options
    tr ng-repeat=("tool in tools | filter:searchText") 
      td 
        | {{tool.name}}
      td 
        button(ng-click="select(tool)") Select


  br
  br
  br
  div(ng-show="selected_tools")
    h5 Selected tools
    table#selectedTools
      tr
        th What
        th Price pr day
        th Options
      tr ng-repeat=("tool in selected_tools") 
        td 
          | {{tool.name}}
        td 
          button(ng-click="select(tool)") Remove


