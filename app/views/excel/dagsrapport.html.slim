table#dagsrapport
  thead
    th Dato
    th Beskrivelse
    - @workers.each do |w| 
      th= w.name 


  tbody
    - @hours_spent.each do |hs|
      tr
        td= t hs.created_at, format: :short_date
        td= hs.changed_value(:description) 
        td= hs.changed_value(@overtime) 
        td= hs.user.name

    tr
    tr.bg_gray
      td Sum timer pr person
      - @workers.each do |w|
        td= @project.hours_total_for(w, changed: true, overtime: @overtime)


